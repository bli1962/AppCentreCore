    </div> *@
    <RoleClaims Value="isAuthorised" CallBackMethod="ChangeStatus"></RoleClaims>
</div>


@code {
    bool isVisable;
    bool isAuthorised { get; set; }

    private void ChangeStatus(bool isAuthorised)
    {
        isVisable = isAuthorised;
    }

